generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String
  role String @default("customer")

  Address Address[]
}

model Product {
  id Int @id @default(autoincrement())
  name String
  description String
  category String
  price Float
  image String
}

model Address {
  id Int @id @default(autoincrement())
  userId Int
  street String
  number Int
  cep String
  city String
  state String
  country String
  type String @default("home")

  user User @relation(fields: [userId], references: [id]) 
}
